<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="/images/calendar2.png" type="image/png" size="16x16">
  <title>Smart Time Table Scheduler</title>
  <link rel="stylesheet" href="/CSS/Profile.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.js"></script>
</head>
<body>
  <a href="/">
    <button class="logout-btn">Logout</button>
  </a>
    <button id="res" onclick="resetPage()">Reset</button>
    <h1>Smart Time Table Scheduler</h1>
  <h2>Create New Class</h2>
  <form id="classForm">
    <label for="institutionName">Institution Name: </label>
    <input type="text" id="institutionName" required oninput="document.getElementById('itn').textContent = this.value">
    <label for="className">Class Name: </label>
    <input type="text" id="className" required>
    <button type="button" onclick="addClass()">Create Class</button>
  </form>
  <h2 id="cls">Classes</h2>
  <ul id="classList"></ul>
  <h2 id="one">Add Staff to Class</h2>
  <form id="staffForm">
    <label for="staffClass">Select Class: </label>
    <select id="staffClass" required></select>
    <label for="staffName">Staff Name: </label>
    <input type="text" id="staffName" required>
    <label for="maxClasses">Max Classes per Week: </label>
    <input type="number" id="maxClasses" min="1" required>
    <label for="subjects">Subjects (comma-separated): </label>
    <input type="text" id="subjects" placeholder="E.g., Math, Science" required>
    <button type="button" onclick="addStaff()">Add Staff</button>
  </form>
  <h2 id="cls">Staff List by Class</h2>
  <ul id="staffList"></ul>
  <button onclick="generateTimetables()">Generate Timetables</button><br>
  <div id="timetableContainer"><h2 id="itn"></h2></div>
  <button id="downloadPdfButton" onclick="downloadTimetablePDF()" style="display: none;">Download PDF</button>
  <script>
    function resetPage() {
  // Reset form inputs
  document.getElementById("institutionName").value = "";
  document.getElementById("className").value = "";
  document.getElementById("staffName").value = "";
  document.getElementById("maxClasses").value = "";
  document.getElementById("subjects").value = "";
  
  // Clear dropdowns and lists
  document.getElementById("staffClass").innerHTML = ""; 
  document.getElementById("classList").innerHTML = "";
  document.getElementById("staffList").innerHTML = "";
  document.getElementById("one").innerHTML = "";
  
  // Reset the timetable container completely
  document.getElementById("timetableContainer").innerHTML = "<h2 id='itn'></h2>";
  
  // Hide the download button
  document.getElementById("downloadPdfButton").style.display = "none";
  
  // Clear any stored data if you're using it
  // (This depends on how your Profile.js is implemented)
  // For example:
  // localStorage.removeItem('classData');
  // localStorage.removeItem('staffData');
  
  // Force page reload as a last resort if needed
  // location.reload();
}
  </script>
  <script src="/JS/Profile.js"></script>
</body>
</html>

